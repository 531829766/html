page{
  background-color: #edece8;
}
.user_info_wrap{
  height: 45vh;
  background-color: var(--themeColor);
  overflow: hidden;
}
.user_img_wrap{
  height: 50vh;    
}
.user_bg{
 filter: blur(10rpx);
}
.user_info{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 10%;
  text-align: center;
}
.user_icon{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_name{
  color:#fff;
  margin-top: 40rpx;
  font-size: 40rpx;
}
.user_btn{
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.user_content{
  position: relative;
}
.user_main{
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.history_wrap{
  background-color: #fff;
  display: flex;
}
.his_nav{
  flex: 1;
  text-align: center;
  padding: 10rpx 0 ;
}
.his_num{
  color:var(--themeColor);
}
.orders_wrap{
background-color: #fff;
margin-top: 30rpx;
}
.orders_title{
  padding: 20rpx;
  border-bottom:  1rpx solid #ccc;
}
.order_content{
  display: flex;
}
.ord_nav{
flex: 1;
text-align: center;
padding: 15rpx 0;
}
.iconfont{
  color: var(--themeColor);
}
