<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.hziee.mapper.UserMapper">

    <!--按id查找用户-->
    <select id="findUserById" parameterType="Integer" resultType="cn.edu.hziee.model.User">

    select * from  user  where id=#{id}
</select>
    <!--按用户名查找用户-->
    <select id="findUserByIdName" parameterType="string" resultType="cn.edu.hziee.model.User">
    select * from user where username=#{username}
</select>


    <!--注册/添加 顾客/用户-->
    <insert id="insertUser" parameterType="cn.edu.hziee.model.User">
    insert into customer(uid,username,password,phonenumber,balance,head_img) values(#{uid},#{username},#{password},#{phonenumber},#{balance},#{head_img})
</insert>
    <!--更新用户余额-->
    <update id="updateUserBalanceByUid" parameterType="cn.edu.hziee.model.User" >
        update  customer
        <set>
            <choose>
                <when test="balance!=null">
                    balance=#{balance}
                </when>
            </choose>
        </set>
        <where>
            <if test="uid!=null">
                and uid=#{uid}
            </if>
        </where>

    </update>


</mapper>