<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.hziee.mapper.AdminMapper">

    <!--按id查找用户-->
    <select id="findAdminById" parameterType="Integer" resultType="cn.edu.hziee.model.Admin">

    select * from  admin  where a_id=#{a_id}
</select>
    <!--按用户名查找用户-->
    <select id="findAdminByIdName" parameterType="String" resultType="cn.edu.hziee.model.Admin">
        select * from admin where a_username = #{a_username}
</select>
</mapper>