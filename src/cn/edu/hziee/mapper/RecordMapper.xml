<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.hziee.mapper.RecordMapper">

    <insert id="insertRecord" parameterType="cn.edu.hziee.model.Record" >
        insert into record(l_uid,date_time,gnumber,l_gid) values (#{l_uid},#{date_time},#{gnumber},#{l_gid})
    </insert>

    <select id="findRecordByUid" parameterType="Integer" resultType="cn.edu.hziee.model.Record" >
        select * from record where l_uid=#{l_uid}
    </select>

    <select id="findRecordByRid" parameterType="Integer" resultType="cn.edu.hziee.model.Record">
        select * from record where rid=#{rid}
    </select>

    <select id="findMaxRid" resultType="Integer">
        select max(rid) from record
    </select>

</mapper>